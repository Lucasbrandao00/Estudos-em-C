#include <stdio.h>
#include<conio.h>
#include<math.h>
#include<stdlib.h>

int main(){

    float num, resultado;
    int op;

    printf("Digite um valor:\n");
    scanf("%f", &num);
    system("cls");

    printf("1 - Para calcular a raiz quadrada\n");
    printf("2 - Para calcular o numero ao quadrado\n");
    printf("3 - Para n√£o fazer nada\n");
    scanf("%d", &op);

    switch (op){
    case 1 :
        resultado=sqrt(num);
        printf("A raiz quadrada do numero digitado e: %,2f\n", resultado);
        break;

        case 2 :
        resultado=pow(num,2);
        printf("O numero ao quadrado e: %.2f\n", resultado);
        break;

        default:
        printf("Fim do programa!");
    }
return 0;
}
